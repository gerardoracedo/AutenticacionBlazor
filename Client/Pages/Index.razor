@code
{
    private string _authMessage;
    private string _nameMessage;
    private MDatosUsuarioLogeado _datosUsuario = new MDatosUsuarioLogeado();
    private List<MCard> myCards = new List<MCard>();
    [CascadingParameter] public NuevoLayout Layout { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Layout._Ubicacion = "Inicio";
        StateHasChanged();
        await GetClaimsPrincipalData();
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var userAuth = authState.User;
    }

    private async Task GetClaimsPrincipalData()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity.IsAuthenticated)
        {
            _authMessage = "Bienvenido";
            _datosUsuario.Nombre_nombre_fantasia = await localStorageAsync.GetItemAsync<string>("lS_Nombre_nombre_fantasia");
        }
        else
        {
            _authMessage = "Inicia sesión o registrate.";
        }
    }

    private void goTo(string gotodir)
    {
        NavigationManager.NavigateTo(gotodir);
    }
}