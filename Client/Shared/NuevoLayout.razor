    @code{
        [CascadingParameter] protected Task<AuthenticationState> AuthStat { get; set; }
        public string _Ubicacion { get; set; }
        private MDatosUsuarioLogeado _rdatosUsuario = new MDatosUsuarioLogeado();
        private MDatosUsuarioLogeado _datosUsuario = new MDatosUsuarioLogeado();
        private string _id_identity;
        private string _user_mail;
        protected async override Task OnInitializedAsync()
        {
            base.OnInitialized();
            var user = (await AuthStat).User;

            _Ubicacion = "Inicio";

            if (!user.Identity.IsAuthenticated)
            {
                localStorage.Clear();
                localStorage.SetItem("lS_Resultado", false);
                Navigation.NavigateTo($"authentication/login?returnUrl={Uri.EscapeDataString(Navigation.Uri)}");
            }
            else
            {
                var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
                var userAuth = authState.User;
                _id_identity = authState.User.Claims.ToList().FirstOrDefault(x => x.Type == "sub").Value;
                _user_mail = userAuth.Identity.Name;
                if (localStorage.GetItem<bool>("lS_Resultado") == false)
                {
                    // Agrego los datos del usuario
                    _rdatosUsuario = await Http.GetFromJsonAsync<MDatosUsuarioLogeado>("api/Autenticacion/UserData");
                    localStorage.SetItem("lS_Nombre_nombre_fantasia", _rdatosUsuario.Nombre_nombre_fantasia);
                    localStorage.SetItem("lS_Apellido_nombre_legal", _rdatosUsuario.Apellido_nombre_legal);
                    localStorage.SetItem("lS_Cuit", _rdatosUsuario.Cuit);
                    localStorage.SetItem("lS_Tipo_persona", _rdatosUsuario.Tipo_persona);
                    localStorage.SetItem("lS_Resultado", _rdatosUsuario.Resultado);
                }

            }

            //Muestro los datos del usuario
            _datosUsuario.Nombre_nombre_fantasia = localStorage.GetItem<string>("lS_Nombre_nombre_fantasia");
            _datosUsuario.Apellido_nombre_legal = localStorage.GetItem<string>("lS_Apellido_nombre_legal");
            _datosUsuario.Cuit = localStorage.GetItem<string>("lS_Cuit");
            _datosUsuario.Tipo_persona = localStorage.GetItem<int>("lS_Tipo_persona");
            _datosUsuario.Resultado = localStorage.GetItem<bool>("lS_Resultado");
        }

        protected async override Task OnAfterRenderAsync(bool firstRender)
        {
            //await jsRuntime.InvokeVoidAsync("metronicScript3");
            await jsRuntime.InvokeAsync<IJSObjectReference>("import", "./js/theme.js");
            await base.OnAfterRenderAsync(firstRender);
        }
        private async Task BeginSignOut(MouseEventArgs args)
        {
            localStorage.Clear();
            await SignOutManager.SetSignOutState();
            Navigation.NavigateTo("authentication/logout");
            //Navigation.NavigateTo("Logout");
        }
    }
