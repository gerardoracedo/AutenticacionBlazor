@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Mi Yerba Buena - Registro";
}
<form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" class="form w-100" method="post">
    @if (Model.xTipoPersona == "FISICA" || Model.xTipoPersona == "F")
    {
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="text-center mb-10">
            Esta por iniciar sesión usando <strong>@Model.ProviderDisplayName</strong><br />
            Antes de continuar es necesario que complete los datos del siguiente formulario, el mismo tiene caracter de <strong>Declaración Jurada</strong>.<br />
            Estos datos <strong>no podran ser modificados por un usuario</strong>.<br />
            Al hacer clic en el botón "Registrarse" usted acepta que todos los datos cargados en el formulario son correctos.
        </div>
        <div class="fv-row mb-10">
            <label class="form-label fs-6 fw-bolder text-dark">Cuit</label>
            <input class="form-control form-control-lg form-control-solid" asp-for="Input2.Cuit" disabled />
        </div>
        <div class="fv-row mb-10">
            <label class="form-label fs-6 fw-bolder text-dark">Apellido y nombre</label>
            <input class="form-control form-control-lg form-control-solid" asp-for="Input2.ApeyNomb" disabled />
        </div>
        <div class="fv-row mb-10">
            <label class="form-label fs-6 fw-bolder text-dark">Correo electronico</label>
            <input class="form-control form-control-lg form-control-solid" asp-for="Input.Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="fv-row mb-10">
            <label class="form-label fs-6 fw-bolder text-dark">Fecha de Nacimiento</label>
            <input class="form-control form-control-lg form-control-solid" asp-for="Input.Fecha_nacimiento" />
            <span asp-validation-for="Input.Fecha_nacimiento" class="text-danger"></span>
        </div>
        <div class="fv-row mb-10">
            <label class="form-label fs-6 fw-bolder text-dark">Genero</label>
            <select class="form-select" data-control="select2" data-placeholder="Seleccione uno" asp-for="Input.Id_genero">
                <option value="0">Seleccione uno</option>
                @foreach (var item in @Model.listadegeneros)
                {
                    <option value="@item.Id">@item.Genero</option>
                }
            </select>
            <span asp-validation-for="Input.Id_genero" class="text-danger"></span>
        </div>
        <div class="fv-row mb-10">
            <label class="form-label fs-6 fw-bolder text-dark">Pais</label>
            <select class="form-select" data-control="select2" data-placeholder="Seleccione uno" asp-for="Input.Id_pais">
                <option value="0">Seleccione uno</option>
                @foreach (var item in @Model.listadepaises)
                {
                    <option value="@item.Id">@item.Pais</option>
                }
            </select>
            <span asp-validation-for="Input.Id_pais" class="text-danger"></span>
        </div>
        <div class="fv-row mb-10">
            <label class="form-label fs-6 fw-bolder text-dark">Estado civil</label>
            <select class="form-select" data-control="select2" data-placeholder="Seleccione uno" asp-for="Input.Id_estado_civil">
                <option value="0">Seleccione uno</option>
                @foreach (var item in @Model.listadeestadocivil)
                {
                    <option value="@item.Id">@item.Estado_civil</option>
                }
            </select>
            <span asp-validation-for="Input.Id_estado_civil" class="text-danger"></span>
        </div>
        <div class="fv-row mb-10">
            <label class="form-label fs-6 fw-bolder text-dark">Tipo de dni</label>
            <select class="form-select" data-control="select2" data-placeholder="Seleccione uno" asp-for="Input.Id_tipo_dni">
                <option value="0">Seleccione uno</option>
                @foreach (var item in @Model.listadetipodni)
                {
                    <option value="@item.Id">@item.Tipo_dni</option>
                }
            </select>
            <span asp-validation-for="Input.Id_tipo_dni" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Input.Id_tipo_sociedad" value="1" />
        <div class="text-center">
            <button type="submit" class="btn btn-lg btn-primary w-100 mb-5">Registrarse</button>
        </div>
    }
    else
    {
        <div class="text-center mb-10">
            No se reconoce la fuente de inicio de sesión.<br />
            <a href="./Login">Volver al inicio</a>
        </div>
    }

</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

